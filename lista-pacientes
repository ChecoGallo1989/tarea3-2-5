    <form>
    <table>
    <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Acciones</th>
    </tr>
    <?php while ($fila = $resultado->fetch_assoc()) { ?>
    <tr>
        <td><?= $fila['id'] ?></td>
        <td><?= htmlspecialchars($fila['nombre']) ?></td>
        <td><?= htmlspecialchars($fila['apellido']) ?></td>
        <td>
            <a class="btn leer" href="verPaciente.php?id=<?= $fila['id'] ?>">Leer</a>
            <a class="btn editar" href="editarPaciente.php?id=<?= $fila['id'] ?>">Editar</a>
            <a class="btn borrar" href="borrarPaciente.php?id=<?= $fila['id'] ?>"
               onclick="return confirm('Â¿Deseas borrar este paciente?');">Borrar</a>
        </td>
    </tr>
    <?php } ?>
</table>

 



    </form>


